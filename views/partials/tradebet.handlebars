<!-- Modal -->
<div class="modal fade" id="bet" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title text-center" id="myModalLabel">{{this.user.local.name}} {{this.user.local.lastName}}</h2>
            </div>

            <div class="modal-body">
                <form class="form-horizontal" action="/trade/buycoin" method="post">

                    <div class="form-group">
                        <div class="input-group" style="margin: 0 20px 0 20px;">
                            <div class="input-group-addon">Current money in your WALLET</div>
                            <input type="text" class="form-control" id="wallet" readonly placeholder={{this.user.local.USD}}>
                            <div class="input-group-addon">$</div>
                        </div>
                    </div>
                    <hr>
                    <h4>Currency to BET</h4>

                    <select class="form-control coin" name="coins">
                        {{#each marketCoins}}
                        <option value="{{this.value}}" class="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                    </select>

                    <hr>
                    <h4>Quantities</h4>
                    <div class="form-group" style="margin: 0 5px 0 5px">
                        <label class="sr-only" for="amount">Quantities</label>
                        <input type="number" class="form-control" id="amount" placeholder="Amount">
                    </div>
                    <hr>
                    <h4>Total $</h4>
                    <div class="input-group">
                        <div class="input-group-addon">$ usd</div>
                        <input type="text" class="form-control" id="total" placeholder="Amount">
                    </div>

                    <hr>

                    <button type="submit" class="btn btn-primary">BET currency</button>

                </form>
            </div>
        </div>
    </div>
</div>