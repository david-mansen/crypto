<!-- Modal -->
<div class="modal fade" id="buy" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title text-center" id="myModalLabel">USERNAME</h2>
            </div>

            <div class="modal-body">
                <form class="form-horizontal" action="/" method="post">

                    <div class="form-group">
                        <label class="sr-only" for="wallet">Amount (in dollars)</label>
                        <div class="input-group" style="margin: 0 20px 0 20px;">
                            <div class="input-group-addon">Current $$$ on your WALLET</div>
                            <input type="text" class="form-control" id="wallet" placeholder="00000000" readonly>
                            <div class="input-group-addon">.00</div>
                        </div>
                    </div>
                    <hr>
                    <h4>Currency to BUY</h4>
                    <select class="form-control">
                        <option>Bitcoin</option>
                        <option>Etherium</option>
                    </select>
                    <hr>
                    <h4>Quantities</h4>
                    <div class="form-group" style="margin: 0 5px 0 5px">
                        <label class="sr-only" for="amount">Quantities</label>
                        <input type="number" class="form-control" id="amount" placeholder="Amount">
                    </div>
                    <hr>
                    <h4>Total $</h4>
                    <div class="input-group">
                        <div class="input-group-addon">$</div>
                        <input type="text" class="form-control" id="total" placeholder="Amount">
                        <div class="input-group-addon">.00</div>
                    </div>

                    <hr>

                    <button type="submit" class="btn btn-primary">BUY currency</button>

                </form>
            </div>
        </div>
    </div>
</div>